@*
    Reusable priority badge component
    Displays request priority with appropriate color coding
*@

<span class="priority-badge priority-@GetPriorityClass()">
    @Priority Priority
</span>

<style>
    .priority-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        display: inline-block;
    }

    .priority-low {
        background-color: #e5e7eb;
        color: #374151;
    }

    .priority-medium {
        background-color: #fed7aa;
        color: #9a3412;
    }

    .priority-high {
        background-color: #fecaca;
        color: #991b1b;
    }
</style>

@code {
    [Parameter]
    public string Priority { get; set; } = string.Empty;

    private string GetPriorityClass()
    {
        return Priority.ToLower() switch
        {
            "high" => "high",
            "medium" => "medium",
            "low" => "low",
            _ => "low"
        };
    }
}

@page "/feature-flags"
@using frontend.Models
@using frontend.Services.Interfaces
@inject IAuthService AuthService
@inject IApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Feature Flags - Smart Maintenance</PageTitle>

<div class="feature-flags-container">
    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border spinner-large" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading feature flags...</p>
        </div>
    }
    else if (!isAuthenticated || currentUser == null)
    {
        <div class="alert alert-warning">
            <h4>‚ö†Ô∏è Authentication Required</h4>
            <p>Please <a href="/login">sign in</a> to access feature flags.</p>
        </div>
    }
    else if (currentUser.Role != "admin")
    {
        <div class="alert alert-danger">
            <h4>üîí Access Denied</h4>
            <p>Only administrators can manage feature flags.</p>
        </div>
    }
    else
    {
        <div class="page-header">
            <div class="header-content">
                <div>
                    <h1>Feature Flags Management</h1>
                    <p class="subtitle">Control feature rollouts and experimental features</p>
                </div>
                <div class="header-actions">
                    <button class="btn btn-secondary" @onclick="LoadFeatureFlags">
                        üîÑ Refresh
                    </button>
                </div>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="summary-cards">
            <div class="summary-card">
                <div class="card-icon total">üìä</div>
                <div class="card-content">
                    <div class="card-value">@featureFlags.Count</div>
                    <div class="card-label">Total Features</div>
                </div>
            </div>
            <div class="summary-card">
                <div class="card-icon enabled">‚úÖ</div>
                <div class="card-content">
                    <div class="card-value">@featureFlags.Count(f => f.Enabled)</div>
                    <div class="card-label">Enabled</div>
                </div>
            </div>
            <div class="summary-card">
                <div class="card-icon disabled">‚ùå</div>
                <div class="card-content">
                    <div class="card-value">@featureFlags.Count(f => !f.Enabled)</div>
                    <div class="card-label">Disabled</div>
                </div>
            </div>
            <div class="summary-card">
                <div class="card-icon rollout">üéØ</div>
                <div class="card-content">
                    <div class="card-value">@featureFlags.Count(f => f.Enabled && f.RolloutPercentage < 100)</div>
                    <div class="card-label">Gradual Rollout</div>
                </div>
            </div>
        </div>

        <!-- Filter by Category -->
        <div class="filters">
            <label>Filter by Category:</label>
            <select class="form-select" @bind="selectedCategory" @bind:after="FilterFlags">
                <option value="all">All Categories</option>
                <option value="analytics">Analytics</option>
                <option value="notifications">Notifications</option>
                <option value="integrations">Integrations</option>
                <option value="mobile">Mobile</option>
                <option value="automation">Automation</option>
                <option value="security">Security</option>
                <option value="ui">UI</option>
                <option value="experimental">Experimental</option>
            </select>
        </div>

        <!-- Feature Flags Grid -->
        @if (filteredFlags.Count == 0)
        {
            <div class="no-data">
                <p>No feature flags found in this category.</p>
            </div>
        }
        else
        {
            <div class="flags-grid">
                @foreach (var flag in filteredFlags)
                {
                    <div class="flag-card @(flag.Enabled ? "enabled" : "disabled")">
                        <div class="flag-header">
                            <div class="flag-title">
                                <h3>@flag.Name</h3>
                                <span class="flag-key">@flag.FeatureKey</span>
                            </div>
                            <div class="flag-actions">
                                <button class="btn-toggle" @onclick="() => ToggleFlag(flag)">
                                    @if (flag.Enabled)
                                    {
                                        <span class="toggle-label enabled">ON</span>
                                    }
                                    else
                                    {
                                        <span class="toggle-label disabled">OFF</span>
                                    }
                                </button>
                            </div>
                        </div>

                        <div class="flag-body">
                            <p class="flag-description">@(flag.Description ?? "No description available")</p>

                            <div class="flag-metadata">
                                <div class="metadata-item">
                                    <span class="label">Category:</span>
                                    <span class="badge badge-category">@flag.Category</span>
                                </div>
                                <div class="metadata-item">
                                    <span class="label">Rollout:</span>
                                    <span class="badge badge-rollout">@flag.RolloutPercentage%</span>
                                </div>
                                <div class="metadata-item">
                                    <span class="label">Status:</span>
                                    @if (flag.Enabled)
                                    {
                                        @if (flag.RolloutPercentage == 100)
                                        {
                                            <span class="badge badge-success">Fully Enabled</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Gradual Rollout (@flag.RolloutPercentage%)</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge badge-disabled">Disabled</span>
                                    }
                                </div>
                            </div>

                            @if (flag.Enabled && flag.RolloutPercentage < 100)
                            {
                                <div class="rollout-bar">
                                    <div class="rollout-progress" style="width: @(flag.RolloutPercentage)%"></div>
                                </div>
                            }
                        </div>

                        <div class="flag-footer">
                            <small>Created: @flag.CreatedAt.ToString("MMM dd, yyyy")</small>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

@code {
    private bool isLoading = true;
    private bool isAuthenticated = false;
    private UserModel? currentUser = null;
    private List<FeatureFlagModel> featureFlags = new();
    private List<FeatureFlagModel> filteredFlags = new();
    private string selectedCategory = "all";

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            currentUser = await AuthService.GetCurrentUserAsync();
            if (currentUser?.Role == "admin")
            {
                await LoadFeatureFlags();
            }
        }
        isLoading = false;
    }

    private async Task LoadFeatureFlags()
    {
        isLoading = true;
        try
        {
            var response = await ApiService.GetFeatureFlagsAsync();
            if (response.Success)
            {
                featureFlags = response.Data;
                FilterFlags();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading feature flags: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FilterFlags()
    {
        if (selectedCategory == "all")
        {
            filteredFlags = featureFlags;
        }
        else
        {
            filteredFlags = featureFlags.Where(f => f.Category == selectedCategory).ToList();
        }
    }

    private async Task ToggleFlag(FeatureFlagModel flag)
    {
        try
        {
            var response = await ApiService.ToggleFeatureFlagAsync(flag.Id);
            if (response.Success)
            {
                // Update local state
                flag.Enabled = !flag.Enabled;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error toggling flag: {ex.Message}");
        }
    }
}


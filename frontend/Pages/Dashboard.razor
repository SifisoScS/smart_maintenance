                </div>
                <div class="chart-content">
                    @{
                        var statusGroups = new[] {
                            new { Status = "Submitted", Count = pendingRequests, Color = "submitted" },
                            new { Status = "In Progress", Count = inProgressRequests, Color = "in_progress" },
                            new { Status = "Completed", Count = completedRequests, Color = "completed" }
                        };
                        var maxStatusCount = statusGroups.Max(g => g.Count);
                        if (maxStatusCount == 0) maxStatusCount = 1;
                    }
                    @foreach (var group in statusGroups)
                    {
                        var percentage = (group.Count * 100.0 / maxStatusCount);

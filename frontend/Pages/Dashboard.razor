@code {
    private bool isLoading = true;
    private bool isAuthenticated = false;
    private UserModel? currentUser;
    private List<RequestModel> requests = new();
    private List<AssetModel> assets = new();
    private List<UserModel> users = new();

    // Statistics
    private int totalRequests = 0;
    private int pendingRequests = 0;
    private int inProgressRequests = 0;
    private int completedRequests = 0;
    private int assignedToMe = 0;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;

            // Check authentication
            isAuthenticated = await AuthService.IsAuthenticatedAsync();

            if (!isAuthenticated)
            {
                Navigation.NavigateTo("/login");
                return;
            }

            // Get current user
            currentUser = await AuthService.GetCurrentUserAsync();

            if (currentUser == null)
            {
                Navigation.NavigateTo("/login");
                return;
            }

            // Load data based on role
            await LoadDashboardData();
        }
        catch (Exception ex)
        {
            ToastService.ShowError("Failed to load dashboard data");
            Console.WriteLine($"Dashboard error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadDashboardData()
    {
        try
        {
            // Load requests
            requests = await ApiService.GetRequestsAsync() ?? new();

            // Calculate statistics
            totalRequests = requests.Count;
            pendingRequests = requests.Count(r => r.Status == "submitted");
            inProgressRequests = requests.Count(r => r.Status == "in_progress");
            completedRequests = requests.Count(r => r.Status == "completed");

            if (currentUser?.Role == "technician")
            {
                assignedToMe = requests.Count(r => r.AssignedTechnicianId == currentUser.Id);
            }

            // Load additional data for admin
            if (currentUser?.Role == "admin")
            {
                assets = await ApiService.GetAssetsAsync() ?? new();
                users = await ApiService.GetUsersAsync() ?? new();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
            // Don't show toast here, already handled in OnInitializedAsync
        }
    }

    private RenderFragment RenderAdminDashboard() => __builder =>

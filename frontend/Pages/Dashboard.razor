@page "/dashboard"
@using frontend.Models
@using frontend.Services.Interfaces
@inject IAuthService AuthService
@inject IApiService ApiService
@inject NavigationManager Navigation
@inject IToastService ToastService

<PageTitle>Dashboard - Smart Maintenance</PageTitle>

<div class="dashboard-container">
    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border spinner-large" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading dashboard...</p>
        </div>
    }
    else if (!isAuthenticated || currentUser == null)
    {
        <div class="alert alert-warning">
            <h4>‚ö†Ô∏è Authentication Required</h4>
            <p>Please <a href="/login">sign in</a> to access the dashboard.</p>
        </div>
    }
    else
    {
        <div class="dashboard-header">
            <div class="header-content">
                <div>
                    <h1>Welcome back, @currentUser.FullName! üëã</h1>
                    <p class="subtitle">@GetRoleDescription(currentUser.Role)</p>
                </div>
                <div class="header-actions">
                    @if (currentUser.Role == "admin")
                    {
                        <button class="btn btn-primary-outline" @onclick="@(() => Navigation.NavigateTo("/assets"))">
                            Assets
                        </button>
                    }
                    <span class="badge badge-@GetRoleBadgeClass(currentUser.Role)">@currentUser.Role.ToUpper()</span>
                    <button class="btn btn-outline" @onclick="HandleLogout">Sign Out</button>
                </div>
            </div>
        </div>

        @if (currentUser.Role == "admin")
        {
            @RenderAdminDashboard()
        }
        else if (currentUser.Role == "technician")
        {
            @RenderTechnicianDashboard()
        }
        else if (currentUser.Role == "client")
        {
            @RenderClientDashboard()
        }
    }
</div>


@page "/assets"
@using frontend.Models
@using frontend.Services.Interfaces
@inject IApiService ApiService
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject IToastService ToastService

<PageTitle>Assets - Smart Maintenance</PageTitle>

<div class="assets-container">
    <div class="page-header">
        <div class="header-content">
            <h2>Asset Management</h2>
            <p class="subtitle">Manage and monitor all assets in the system</p>
        </div>
    </div>

    @if (isLoading)
    {
        <LoadingSpinner Message="Loading assets..." />
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @errorMessage
        </div>
    }
    else
    {
        <!-- Analytics Dashboard -->
        <div class="charts-section">
            <!-- Asset Condition Chart -->
            <div class="chart-container">
                <div class="chart-title">
                    <i>üìä</i>
                    <h3>Asset Condition Distribution</h3>
                </div>
                <div class="chart-content">
                    @{
                        var conditionGroups = assets.GroupBy(a => a.Condition).Select(g => new { Condition = g.Key, Count = g.Count() }).OrderBy(x => x.Condition);
                        var maxConditionCount = conditionGroups.Any() ? conditionGroups.Max(g => g.Count) : 1;
                    }
                    @foreach (var group in conditionGroups)
                    {
                        var percentage = maxConditionCount > 0 ? (group.Count * 100.0 / maxConditionCount) : 0;
                        var colorClass = GetConditionColor(group.Condition);
                        <div class="chart-bar-row">
                            <span class="chart-label">@group.Condition</span>
                            <div class="chart-bar-container">
                                <div class="chart-bar chart-bar-@colorClass" style="width: @percentage%"></div>
                            </div>
                            <span class="chart-value">@group.Count</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Asset Status Chart -->
            <div class="chart-container">
                <div class="chart-title">
                    <i>üîÑ</i>
                    <h3>Asset Status Overview</h3>
                </div>
                <div class="chart-content">
                    @{
                        var statusGroups = assets.GroupBy(a => a.Status).Select(g => new { Status = g.Key, Count = g.Count() }).OrderBy(x => x.Status);
                        var maxStatusCount = statusGroups.Any() ? statusGroups.Max(g => g.Count) : 1;
                    }
                    @foreach (var group in statusGroups)
                    {
                        var percentage = maxStatusCount > 0 ? (group.Count * 100.0 / maxStatusCount) : 0;
                        var colorClass = GetStatusColor(group.Status);
                        <div class="chart-bar-row">
                            <span class="chart-label">@group.Status</span>
                            <div class="chart-bar-container">
                                <div class="chart-bar chart-bar-@colorClass" style="width: @percentage%"></div>
                            </div>
                            <span class="chart-value">@group.Count</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Asset Value Summary -->
            <div class="chart-container">
                <div class="chart-title">
                    <i>üí∞</i>
                    <h3>Total Asset Value</h3>
                </div>
                <div class="stat-summary">
                    @{
                        var totalValue = assets.Where(a => a.PurchasePrice.HasValue).Sum(a => a.PurchasePrice.Value);
                        var avgValue = assets.Where(a => a.PurchasePrice.HasValue).Any()
                            ? assets.Where(a => a.PurchasePrice.HasValue).Average(a => a.PurchasePrice.Value)
                            : 0;
                    }
                    <div class="stat-item">
                        <div class="stat-label">Total Value</div>
                        <div class="stat-number">$@totalValue.ToString("N2")</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Average Value</div>
                        <div class="stat-number">$@avgValue.ToString("N2")</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Total Assets</div>
                        <div class="stat-number">@assets.Count</div>
                    </div>
                </div>
            </div>

            <!-- Asset Location Distribution -->
            <div class="chart-container">
                <div class="chart-title">
                    <i>üìç</i>
                    <h3>Assets by Location</h3>
                </div>
                <div class="chart-content">
                    @{
                        var locationGroups = assets.GroupBy(a => a.Location).Select(g => new { Location = g.Key, Count = g.Count() }).OrderByDescending(x => x.Count).Take(5);
                        var maxLocationCount = locationGroups.Any() ? locationGroups.Max(g => g.Count) : 1;
                    }
                    @foreach (var group in locationGroups)
                    {
                        var percentage = maxLocationCount > 0 ? (group.Count * 100.0 / maxLocationCount) : 0;
                        <div class="chart-bar-row">
                            <span class="chart-label">@group.Location</span>
                            <div class="chart-bar-container">
                                <div class="chart-bar chart-bar-primary" style="width: @percentage%"></div>
                            </div>
                            <span class="chart-value">@group.Count</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="filters-card">
            <div class="filter-row">
                <div class="filter-group">
                    <label>Search</label>
                    <input type="text"
                           class="form-control"
                           placeholder="Search by name or code..."
                           value="@searchTerm"
                           @oninput="@(e => { searchTerm = e.Value?.ToString() ?? string.Empty; ApplyFilters(); })" />
                </div>

                <div class="filter-group">
                    <label>Condition</label>
                    <select class="form-control" value="@filterCondition" @onchange="@(e => { filterCondition = e.Value?.ToString() ?? string.Empty; ApplyFilters(); })">
                        <option value="">All Conditions</option>
                        <option value="excellent">Excellent</option>
                        <option value="good">Good</option>
                        <option value="fair">Fair</option>
                        <option value="poor">Poor</option>
                        <option value="critical">Critical</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label>Status</label>
                    <select class="form-control" value="@filterStatus" @onchange="@(e => { filterStatus = e.Value?.ToString() ?? string.Empty; ApplyFilters(); })">
                        <option value="">All Status</option>
                        <option value="active">Active</option>
                        <option value="maintenance">In Maintenance</option>
                        <option value="retired">Retired</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label>Location</label>
                    <input type="text"
                           class="form-control"
                           placeholder="Filter by location..."
                           value="@filterLocation"
                           @oninput="@(e => { filterLocation = e.Value?.ToString() ?? string.Empty; ApplyFilters(); })" />
                </div>

                @if (HasActiveFilters())
                {
                    <div class="filter-group">
                        <label>&nbsp;</label>
                        <button class="btn btn-secondary" @onclick="ClearFilters">
                            Clear Filters
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- Results Count -->
        <div class="results-info">
            <p>Showing <strong>@filteredAssets.Count</strong> of <strong>@assets.Count</strong> assets</p>
        </div>

        <!-- Asset Grid -->
        @if (filteredAssets.Any())
        {
            <div class="assets-grid">
                @foreach (var asset in filteredAssets)
                {
                    <div class="asset-card" @onclick="@(() => ViewAssetDetails(asset.Id))">
                        <div class="asset-header">
                            <h3>@asset.Name</h3>
                            <span class="badge badge-@GetConditionColor(asset.Condition)">
                                @asset.Condition
                            </span>
                        </div>

                        <div class="asset-body">
                            <div class="asset-info">
                                <span class="info-label">Code:</span>
                                <span class="info-value">@asset.AssetCode</span>
                            </div>

                            <div class="asset-info">
                                <span class="info-label">Type:</span>
                                <span class="info-value">@asset.AssetType</span>
                            </div>

                            <div class="asset-info">
                                <span class="info-label">Location:</span>
                                <span class="info-value">@asset.Location</span>
                            </div>

                            <div class="asset-info">
                                <span class="info-label">Status:</span>
                                <span class="badge badge-@GetStatusColor(asset.Status)">
                                    @asset.Status
                                </span>
                            </div>

                            @if (asset.PurchasePrice.HasValue)
                            {
                                <div class="asset-info">
                                    <span class="info-label">Value:</span>
                                    <span class="info-value">$@asset.PurchasePrice.Value.ToString("N2")</span>
                                </div>
                            }

                            @if (asset.PurchaseDate.HasValue)
                            {
                                <div class="asset-info">
                                    <span class="info-label">Purchase Date:</span>
                                    <span class="info-value">@asset.PurchaseDate.Value.ToString("MMM dd, yyyy")</span>
                                </div>
                            }
                        </div>

                        <div class="asset-footer">
                            <button class="btn btn-sm btn-primary" @onclick:stopPropagation="true" @onclick="@(() => ViewAssetDetails(asset.Id))">
                                View Details ‚Üí
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">üì¶</div>
                <h3>No Assets Found</h3>
                <p>@GetEmptyStateMessage()</p>
            </div>
        }
    }
</div>

<!-- Asset Details Modal -->
@if (showModal && selectedAsset != null)
{
    <div class="modal-backdrop" @onclick="CloseModal">
        <div class="modal-container" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h2>@selectedAsset.Name</h2>
                <button class="close-btn" @onclick="CloseModal">&times;</button>
            </div>

            <div class="modal-body">
                <!-- Asset Information Grid -->
                <div class="details-grid">
                    <!-- Basic Information -->
                    <div class="detail-section">
                        <h3 class="section-title">Basic Information</h3>
                        <div class="detail-row">
                            <span class="detail-label">Asset Code:</span>
                            <span class="detail-value">@selectedAsset.AssetCode</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Type:</span>
                            <span class="detail-value">@selectedAsset.AssetType</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Status:</span>
                            <span class="badge badge-@GetStatusColor(selectedAsset.Status)">
                                @selectedAsset.Status
                            </span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Condition:</span>
                            <span class="badge badge-@GetConditionColor(selectedAsset.Condition)">
                                @selectedAsset.Condition
                            </span>
                        </div>
                    </div>

                    <!-- Location Information -->
                    <div class="detail-section">
                        <h3 class="section-title">Location</h3>
                        <div class="detail-row">
                            <span class="detail-label">Location:</span>
                            <span class="detail-value">@selectedAsset.Location</span>
                        </div>
                    </div>

                    <!-- Purchase Information -->
                    @if (selectedAsset.PurchaseDate.HasValue || selectedAsset.PurchasePrice.HasValue)
                    {
                        <div class="detail-section">
                            <h3 class="section-title">Purchase Information</h3>
                            @if (selectedAsset.PurchaseDate.HasValue)
                            {
                                <div class="detail-row">
                                    <span class="detail-label">Purchase Date:</span>
                                    <span class="detail-value">@selectedAsset.PurchaseDate.Value.ToString("MMM dd, yyyy")</span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Age:</span>
                                    <span class="detail-value">@GetAssetAge(selectedAsset)</span>
                                </div>
                            }
                            @if (selectedAsset.PurchasePrice.HasValue)
                            {
                                <div class="detail-row">
                                    <span class="detail-label">Value:</span>
                                    <span class="detail-value">$@selectedAsset.PurchasePrice.Value.ToString("N2")</span>
                                </div>
                            }
                        </div>
                    }

                    <!-- Timestamps -->
                    <div class="detail-section">
                        <h3 class="section-title">System Information</h3>
                        <div class="detail-row">
                            <span class="detail-label">Created At:</span>
                            <span class="detail-value">@selectedAsset.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseModal">Close</button>
            </div>
        </div>
    </div>
}


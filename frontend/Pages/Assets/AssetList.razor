    private List<AssetModel> assets = new();
    private List<AssetModel> filteredAssets = new();
    private UserModel? currentUser;

    private bool isLoading = true;
    private string errorMessage = string.Empty;

    // Modal state
    private bool showModal = false;
    private AssetModel? selectedAsset = null;

    // Filters
    private string searchTerm = string.Empty;
    private string filterCondition = string.Empty;
    private string filterStatus = string.Empty;
    private string filterLocation = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            currentUser = await AuthService.GetCurrentUserAsync();

            if (currentUser == null)
            {
                Navigation.NavigateTo("/login");
                return;
            }

            // Only admins can view assets
            if (currentUser.Role != "admin")
            {
                Navigation.NavigateTo("/dashboard");
                ToastService.ShowError("Access denied. Admin privileges required.");
                return;
            }

            assets = await ApiService.GetAssetsAsync();
            ApplyFilters();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading assets: {ex.Message}";
            Console.WriteLine($"LoadData error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ApplyFilters()
    {
        filteredAssets = assets.Where(a =>
            (string.IsNullOrWhiteSpace(searchTerm) ||
             a.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
             a.AssetCode.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrWhiteSpace(filterCondition) ||
             a.Condition.Equals(filterCondition, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrWhiteSpace(filterStatus) ||
             a.Status.Equals(filterStatus, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrWhiteSpace(filterLocation) ||
             a.Location.Contains(filterLocation, StringComparison.OrdinalIgnoreCase))
        ).ToList();

        StateHasChanged();
    }

    private void ClearFilters()
    {
        searchTerm = string.Empty;
        filterCondition = string.Empty;
        filterStatus = string.Empty;
        filterLocation = string.Empty;
        ApplyFilters();
    }

    private bool HasActiveFilters()
    {
        return !string.IsNullOrWhiteSpace(searchTerm) ||
               !string.IsNullOrWhiteSpace(filterCondition) ||
               !string.IsNullOrWhiteSpace(filterStatus) ||
               !string.IsNullOrWhiteSpace(filterLocation);
    }

    private string GetEmptyStateMessage()
    {
        if (HasActiveFilters())
        {
            return "No assets match your current filters. Try adjusting your search criteria.";
        }
        return "No assets have been added to the system yet.";
    }

    private string GetConditionColor(string condition)
    {
        return condition.ToLower() switch
        {
            "excellent" => "excellent",
            "good" => "good",
            "fair" => "fair",
            "poor" => "poor",
            "critical" => "critical",
            _ => "fair"
        };
    }

    private string GetStatusColor(string status)
    {
        return status.ToLower() switch
        {
            "active" => "active",
            "maintenance" => "maintenance",
            "retired" => "retired",
            _ => "active"
        };
    }

    private void ViewAssetDetails(int assetId)
    {
        selectedAsset = filteredAssets.FirstOrDefault(a => a.Id == assetId);
        if (selectedAsset != null)
        {
            showModal = true;
            StateHasChanged();
        }
    }

    private void CloseModal()
    {
        showModal = false;
        selectedAsset = null;
        StateHasChanged();
    }

    private string GetAssetAge(AssetModel asset)
    {
        if (!asset.PurchaseDate.HasValue) return "N/A";

        var age = DateTime.Now - asset.PurchaseDate.Value;
        var years = age.Days / 365;
        var months = (age.Days % 365) / 30;

        if (years > 0)
        {
            return $"{years} year{(years > 1 ? "s" : "")} {months} month{(months > 1 ? "s" : "")}";
        }
        return $"{months} month{(months > 1 ? "s" : "")}";
    }

@page "/assets"
@using frontend.Models
@using frontend.Services.Interfaces
@inject IApiService ApiService
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject IToastService ToastService

<PageTitle>Assets - Smart Maintenance</PageTitle>

<div class="assets-container">
    <div class="page-header">
        <div class="header-content">
            <h2>Asset Management</h2>
            <p class="subtitle">Manage and monitor all assets in the system</p>
        </div>
    </div>

    @if (isLoading)
    {
        <LoadingSpinner Message="Loading assets..." />
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @errorMessage
        </div>
    }
    else
    {
        <!-- Filters -->
        <div class="filters-card">
            <div class="filter-row">
                <div class="filter-group">
                    <label>Search</label>
                    <input type="text"
                           class="form-control"
                           placeholder="Search by name or code..."
                           value="@searchTerm"
                           @oninput="@(e => { searchTerm = e.Value?.ToString() ?? string.Empty; ApplyFilters(); })" />
                </div>

                <div class="filter-group">
                    <label>Condition</label>
                    <select class="form-control" value="@filterCondition" @onchange="@(e => { filterCondition = e.Value?.ToString() ?? string.Empty; ApplyFilters(); })">
                        <option value="">All Conditions</option>
                        <option value="excellent">Excellent</option>
                        <option value="good">Good</option>
                        <option value="fair">Fair</option>
                        <option value="poor">Poor</option>
                        <option value="critical">Critical</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label>Status</label>
                    <select class="form-control" value="@filterStatus" @onchange="@(e => { filterStatus = e.Value?.ToString() ?? string.Empty; ApplyFilters(); })">
                        <option value="">All Status</option>
                        <option value="active">Active</option>
                        <option value="maintenance">In Maintenance</option>
                        <option value="retired">Retired</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label>Location</label>
                    <input type="text"
                           class="form-control"
                           placeholder="Filter by location..."
                           value="@filterLocation"
                           @oninput="@(e => { filterLocation = e.Value?.ToString() ?? string.Empty; ApplyFilters(); })" />
                </div>

                @if (HasActiveFilters())
                {
                    <div class="filter-group">
                        <label>&nbsp;</label>
                        <button class="btn btn-secondary" @onclick="ClearFilters">
                            Clear Filters
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- Results Count -->
        <div class="results-info">
            <p>Showing <strong>@filteredAssets.Count</strong> of <strong>@assets.Count</strong> assets</p>
        </div>

        <!-- Asset Grid -->
        @if (filteredAssets.Any())
        {
            <div class="assets-grid">
                @foreach (var asset in filteredAssets)
                {
                    <div class="asset-card" @onclick="@(() => ViewAssetDetails(asset.Id))">
                        <div class="asset-header">
                            <h3>@asset.Name</h3>
                            <span class="badge badge-@GetConditionColor(asset.Condition)">
                                @asset.Condition
                            </span>
                        </div>

                        <div class="asset-body">
                            <div class="asset-info">
                                <span class="info-label">Code:</span>
                                <span class="info-value">@asset.AssetCode</span>
                            </div>

                            <div class="asset-info">
                                <span class="info-label">Type:</span>
                                <span class="info-value">@asset.AssetType</span>
                            </div>

                            <div class="asset-info">
                                <span class="info-label">Location:</span>
                                <span class="info-value">@asset.Location</span>
                            </div>

                            <div class="asset-info">
                                <span class="info-label">Status:</span>
                                <span class="badge badge-@GetStatusColor(asset.Status)">
                                    @asset.Status
                                </span>
                            </div>

                            @if (asset.PurchasePrice.HasValue)
                            {
                                <div class="asset-info">
                                    <span class="info-label">Value:</span>
                                    <span class="info-value">$@asset.PurchasePrice.Value.ToString("N2")</span>
                                </div>
                            }

                            <div class="asset-info">
                                <span class="info-label">Purchase Date:</span>
                                <span class="info-value">@asset.PurchaseDate.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>

                        <div class="asset-footer">
                            <button class="btn btn-sm btn-primary" @onclick:stopPropagation="true" @onclick="@(() => ViewAssetDetails(asset.Id))">
                                View Details â†’
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">ðŸ“¦</div>
                <h3>No Assets Found</h3>
                <p>@GetEmptyStateMessage()</p>
            </div>
        }
    }
</div>


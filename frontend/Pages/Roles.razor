@page "/roles"
@using frontend.Models
@using frontend.Services.Interfaces
@using Microsoft.JSInterop
@inject IAuthService AuthService
@inject IApiService ApiService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Roles & Permissions - Smart Maintenance</PageTitle>

<div class="roles-container">
    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border spinner-large" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading roles...</p>
        </div>
    }
    else if (!isAuthenticated || currentUser == null)
    {
        <div class="alert alert-warning">
            <h4>‚ö†Ô∏è Authentication Required</h4>
            <p>Please <a href="/login">sign in</a> to access role management.</p>
        </div>
    }
    else if (currentUser.Role != "admin")
    {
        <div class="alert alert-danger">
            <h4>üîí Access Denied</h4>
            <p>Only administrators can manage roles and permissions.</p>
        </div>
    }
    else
    {
        <div class="page-header">
            <div class="header-content">
                <div>
                    <h1>Role-Based Access Control</h1>
                    <p class="subtitle">Manage roles and permissions for granular access control</p>
                </div>
                <div class="header-actions">
                    <button class="btn btn-secondary" @onclick="LoadRoles">
                        üîÑ Refresh
                    </button>
                </div>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="summary-cards">
            <div class="summary-card">
                <div class="card-icon total">üë•</div>
                <div class="card-content">
                    <div class="card-value">@roles.Count</div>
                    <div class="card-label">Total Roles</div>
                </div>
            </div>
            <div class="summary-card">
                <div class="card-icon system">üîí</div>
                <div class="card-content">
                    <div class="card-value">@roles.Count(r => r.IsSystem)</div>
                    <div class="card-label">System Roles</div>
                </div>
            </div>
            <div class="summary-card">
                <div class="card-icon custom">‚úèÔ∏è</div>
                <div class="card-content">
                    <div class="card-value">@roles.Count(r => !r.IsSystem)</div>
                    <div class="card-label">Custom Roles</div>
                </div>
            </div>
            <div class="summary-card">
                <div class="card-icon permissions">üîë</div>
                <div class="card-content">
                    <div class="card-value">@permissions.Count</div>
                    <div class="card-label">Total Permissions</div>
                </div>
            </div>
        </div>

        <!-- Filter by Type -->
        <div class="filters">
            <label>Filter by Type:</label>
            <select class="form-select" @bind="selectedFilter" @bind:after="FilterRoles">
                <option value="all">All Roles</option>
                <option value="system">System Roles</option>
                <option value="custom">Custom Roles</option>
            </select>
        </div>

        @if (errorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <strong>Error:</strong> @errorMessage
                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
            </div>
        }

        @if (successMessage != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <strong>Success:</strong> @successMessage
                <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
            </div>
        }

        <!-- Roles Grid -->
        @if (filteredRoles.Count == 0)
        {
            <div class="no-data">
                <p>No roles found.</p>
            </div>
        }
        else
        {
            <div class="roles-grid">
                @foreach (var role in filteredRoles)
                {
                    <div class="role-card @(role.IsSystem ? "system-role" : "custom-role")">
                        <div class="role-header">
                            <div class="role-title">
                                <h3>@role.Name</h3>
                                <span class="role-badge @(role.IsSystem ? "badge-system" : "badge-custom")">
                                    @role.SystemBadge
                                </span>
                            </div>
                        </div>

                        <div class="role-body">
                            <p class="role-description">@(role.Description ?? "No description available")</p>

                            <div class="role-stats">
                                <div class="stat-item">
                                    <span class="stat-icon">üîë</span>
                                    <span class="stat-value">@role.DisplayPermissionCount</span>
                                    <span class="stat-label">Permissions</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-icon">üë§</span>
                                    <span class="stat-value">@role.DisplayUserCount</span>
                                    <span class="stat-label">Users</span>
                                </div>
                            </div>

                            @if (role.Permissions != null && role.Permissions.Any())
                            {
                                <div class="permissions-preview">
                                    <strong>Key Permissions:</strong>
                                    <div class="permission-tags">
                                        @foreach (var perm in role.Permissions.Take(5))
                                        {
                                            <span class="permission-tag">@perm.Resource:@perm.Action</span>
                                        }
                                        @if (role.Permissions.Count > 5)
                                        {
                                            <span class="permission-tag more">+@(role.Permissions.Count - 5) more</span>
                                        }
                                    </div>
                                </div>
                            }

                            <div class="role-metadata">
                                <small class="text-muted">
                                    Created: @role.CreatedAt.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                        </div>

                        <div class="role-actions">
                            <button class="btn btn-sm btn-primary" @onclick="() => ViewRoleDetails(role.Id)">
                                üìã View Details
                            </button>
                            @if (!role.IsSystem)
                            {
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteRole(role.Id)">
                                    üóëÔ∏è Delete
                                </button>
                            }
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Permissions Section -->
        <div class="permissions-section">
            <h2>All Permissions</h2>
            <p class="subtitle">Available permissions grouped by resource</p>

            @if (groupedPermissions != null && groupedPermissions.Grouped.Any())
            {
                <div class="permissions-grouped">
                    @foreach (var group in groupedPermissions.Grouped.OrderBy(g => g.Key))
                    {
                        <div class="permission-group">
                            <div class="group-header">
                                <h3>@group.Key</h3>
                                <span class="count-badge">@group.Value.Count permissions</span>
                            </div>
                            <div class="permission-list">
                                @foreach (var perm in group.Value.OrderBy(p => p.Action))
                                {
                                    <div class="permission-item">
                                        <div class="permission-info">
                                            <strong>@perm.Action</strong>
                                            <span class="permission-name">@perm.Name</span>
                                        </div>
                                        <small class="permission-description">@perm.Description</small>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else if (permissions.Any())
            {
                <div class="permissions-list">
                    @foreach (var perm in permissions.OrderBy(p => p.Resource).ThenBy(p => p.Action))
                    {
                        <div class="permission-item">
                            <div class="permission-info">
                                <span class="permission-tag">@perm.Resource:@perm.Action</span>
                                <strong>@perm.Name</strong>
                            </div>
                            <small>@perm.Description</small>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private bool isAuthenticated = false;
    private UserModel? currentUser;

    private List<RoleModel> roles = new();
    private List<RoleModel> filteredRoles = new();
    private List<PermissionModel> permissions = new();
    private GroupedPermissionsResponse? groupedPermissions;

    private string selectedFilter = "all";
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();

        if (isAuthenticated)
        {
            currentUser = await AuthService.GetCurrentUserAsync();
        }

        await LoadRoles();
        await LoadPermissions();
        isLoading = false;
    }

    private async Task LoadRoles()
    {
        try
        {
            errorMessage = null;
            roles = await ApiService.GetRolesAsync();

            // Load detailed role info with permissions and user counts
            var detailedRoles = new List<RoleModel>();
            foreach (var role in roles)
            {
                var detailed = await ApiService.GetRoleByIdAsync(role.Id);
                if (detailed != null)
                {
                    detailedRoles.Add(detailed);
                }
            }
            roles = detailedRoles;

            FilterRoles();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load roles: {ex.Message}";
            roles = new List<RoleModel>();
        }
    }

    private async Task LoadPermissions()
    {
        try
        {
            permissions = await ApiService.GetPermissionsAsync();
            groupedPermissions = await ApiService.GetPermissionsGroupedAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load permissions: {ex.Message}";
            permissions = new List<PermissionModel>();
        }
    }

    private void FilterRoles()
    {
        filteredRoles = selectedFilter switch
        {
            "system" => roles.Where(r => r.IsSystem).ToList(),
            "custom" => roles.Where(r => !r.IsSystem).ToList(),
            _ => roles
        };
    }

    private void ViewRoleDetails(int roleId)
    {
        Navigation.NavigateTo($"/roles/{roleId}");
    }

    private async Task DeleteRole(int roleId)
    {
        var role = roles.FirstOrDefault(r => r.Id == roleId);
        if (role == null) return;

        if (role.IsSystem)
        {
            errorMessage = "Cannot delete system roles.";
            return;
        }

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            $"Are you sure you want to delete the role '{role.Name}'? This action cannot be undone.");

        if (!confirmed) return;

        try
        {
            var response = await ApiService.DeleteRoleAsync(roleId);
            if (response.Success)
            {
                successMessage = $"Role '{role.Name}' deleted successfully.";
                await LoadRoles();
            }
            else
            {
                errorMessage = response.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to delete role: {ex.Message}";
        }
    }
}


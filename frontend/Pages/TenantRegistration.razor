@page "/tenant/register"
@using SmartMaintenance.Blazor.Models
@using frontend.Services.Interfaces
@inject IApiService ApiService
@inject NavigationManager Navigation
@inject IToastService ToastService

<PageTitle>Create Organization - Smart Maintenance</PageTitle>

<div class="tenant-registration-container">
    @if (!registrationComplete)
    {
        <div class="registration-card">
            <div class="registration-header">
                <h1>üöÄ Start Your Journey</h1>
                <p class="subtitle">Create your organization and get started in minutes</p>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <strong>‚ö†Ô∏è Error:</strong> @errorMessage
                </div>
            }

            <!-- Step Indicator -->
            <div class="step-indicator">
                <div class="step @(currentStep >= 1 ? "active" : "") @(currentStep > 1 ? "completed" : "")">
                    <div class="step-number">1</div>
                    <div class="step-label">Choose Plan</div>
                </div>
                <div class="step-line"></div>
                <div class="step @(currentStep >= 2 ? "active" : "") @(currentStep > 2 ? "completed" : "")">
                    <div class="step-number">2</div>
                    <div class="step-label">Organization</div>
                </div>
                <div class="step-line"></div>
                <div class="step @(currentStep >= 3 ? "active" : "")">
                    <div class="step-number">3</div>
                    <div class="step-label">Admin User</div>
                </div>
            </div>

            <!-- Step 1: Choose Plan -->
            @if (currentStep == 1)
            {
                <div class="step-content">
                    <h3 class="step-title">Choose Your Plan</h3>
                    <div class="plans-grid">
                        @foreach (var plan in availablePlans)
                        {
                            <div class="plan-card @(registrationModel.Plan == plan.Id ? "selected" : "") @(plan.IsPopular ? "popular" : "")"
                                 @onclick="() => SelectPlan(plan.Id)">
                                @if (plan.IsPopular)
                                {
                                    <div class="popular-badge">Most Popular</div>
                                }
                                <h4 class="plan-name">@plan.Name</h4>
                                <div class="plan-price">
                                    <span class="price">$@plan.Price</span>
                                    <span class="period">/month</span>
                                </div>
                                <p class="plan-description">@plan.Description</p>

                                <div class="plan-limits">
                                    <div class="limit-item">
                                        <span class="limit-icon">üë•</span>
                                        <span>@(plan.MaxUsers?.ToString() ?? "Unlimited") Users</span>
                                    </div>
                                    <div class="limit-item">
                                        <span class="limit-icon">üîß</span>
                                        <span>@(plan.MaxAssets?.ToString() ?? "Unlimited") Assets</span>
                                    </div>
                                    <div class="limit-item">
                                        <span class="limit-icon">üìã</span>
                                        <span>@(plan.MaxRequestsPerMonth?.ToString() ?? "Unlimited") Requests/mo</span>
                                    </div>
                                </div>

                                <ul class="plan-features">
                                    @foreach (var feature in plan.Features)
                                    {
                                        <li>‚úì @feature</li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                    <div class="step-actions">
                        <button class="btn btn-primary" @onclick="NextStep" disabled="@(string.IsNullOrEmpty(registrationModel.Plan))">
                            Continue to Organization Details
                        </button>
                    </div>
                </div>
            }

            <!-- Step 2: Organization Details -->
            @if (currentStep == 2)
            {
                <div class="step-content">
                    <h3 class="step-title">Organization Information</h3>
                    <EditForm Model="@registrationModel">
                        <div class="form-group">
                            <label for="orgName">Organization Name</label>
                            <InputText id="orgName"
                                      @bind-Value="registrationModel.Name"
                                      class="form-control"
                                      placeholder="Acme Corporation"
                                      disabled="@isLoading" />
                        </div>

                        <div class="form-group">
                            <label for="subdomain">Subdomain</label>
                            <div class="input-group">
                                <InputText id="subdomain"
                                          @bind-Value="registrationModel.Subdomain"
                                          @oninput="OnSubdomainInput"
                                          class="form-control"
                                          placeholder="acme"
                                          disabled="@isLoading" />
                                <span class="input-group-text">.smartmaintenance.com</span>
                            </div>
                            <small class="form-text">This will be your organization's unique URL</small>
                            @if (subdomainError != null)
                            {
                                <small class="text-danger">@subdomainError</small>
                            }
                        </div>

                        <div class="form-group">
                            <label for="contactName">Contact Name (Optional)</label>
                            <InputText id="contactName"
                                      @bind-Value="registrationModel.ContactName"
                                      class="form-control"
                                      placeholder="John Smith"
                                      disabled="@isLoading" />
                        </div>

                        <div class="form-group">
                            <label for="billingEmail">Billing Email (Optional)</label>
                            <InputText id="billingEmail"
                                      type="email"
                                      @bind-Value="registrationModel.BillingEmail"
                                      class="form-control"
                                      placeholder="billing@acme.com"
                                      disabled="@isLoading" />
                        </div>

                        <div class="form-group">
                            <label for="contactPhone">Contact Phone (Optional)</label>
                            <InputText id="contactPhone"
                                      @bind-Value="registrationModel.ContactPhone"
                                      class="form-control"
                                      placeholder="+1 (555) 123-4567"
                                      disabled="@isLoading" />
                        </div>
                    </EditForm>

                    <div class="step-actions">
                        <button class="btn btn-secondary" @onclick="PreviousStep">Back</button>
                        <button class="btn btn-primary" @onclick="NextStep" disabled="@(!IsStep2Valid())">
                            Continue to Admin Details
                        </button>
                    </div>
                </div>
            }

            <!-- Step 3: Admin User Details -->
            @if (currentStep == 3)
            {
                <div class="step-content">
                    <h3 class="step-title">Administrator Account</h3>
                    <EditForm Model="@registrationModel">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="firstName">First Name</label>
                                <InputText id="firstName"
                                          @bind-Value="registrationModel.AdminFirstName"
                                          class="form-control"
                                          placeholder="John"
                                          disabled="@isLoading" />
                            </div>

                            <div class="form-group">
                                <label for="lastName">Last Name</label>
                                <InputText id="lastName"
                                          @bind-Value="registrationModel.AdminLastName"
                                          class="form-control"
                                          placeholder="Smith"
                                          disabled="@isLoading" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="adminEmail">Admin Email</label>
                            <InputText id="adminEmail"
                                      type="email"
                                      @bind-Value="registrationModel.AdminEmail"
                                      class="form-control"
                                      placeholder="admin@acme.com"
                                      disabled="@isLoading" />
                            <small class="form-text">This will be your login email</small>
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <InputText id="password"
                                      type="password"
                                      @bind-Value="registrationModel.AdminPassword"
                                      class="form-control"
                                      placeholder="Enter a strong password"
                                      disabled="@isLoading" />
                            <small class="form-text">Minimum 8 characters</small>
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword">Confirm Password</label>
                            <InputText id="confirmPassword"
                                      type="password"
                                      @bind-Value="confirmPassword"
                                      class="form-control"
                                      placeholder="Re-enter your password"
                                      disabled="@isLoading" />
                            @if (!string.IsNullOrEmpty(confirmPassword) && confirmPassword != registrationModel.AdminPassword)
                            {
                                <small class="text-danger">Passwords do not match</small>
                            }
                        </div>
                    </EditForm>

                    <div class="step-actions">
                        <button class="btn btn-secondary" @onclick="PreviousStep">Back</button>
                        <button class="btn btn-primary" @onclick="HandleRegistration" disabled="@(!IsStep3Valid() || isLoading)">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                <span> Creating organization...</span>
                            }
                            else
                            {
                                <span>Create Organization</span>
                            }
                        </button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Success Message -->
        <div class="success-card">
            <div class="success-icon">‚úì</div>
            <h2>üéâ Organization Created Successfully!</h2>
            <p class="success-message">
                Welcome to Smart Maintenance, <strong>@registrationModel.Name</strong>!
            </p>
            <div class="success-details">
                <p><strong>Your organization URL:</strong></p>
                <p class="organization-url">https://@(registrationModel.Subdomain).smartmaintenance.com</p>
                <p class="mt-3"><strong>Admin Email:</strong> @registrationModel.AdminEmail</p>
            </div>
            <div class="success-actions">
                <button class="btn btn-primary btn-lg" @onclick="NavigateToLogin">
                    Sign In to Your Account
                </button>
            </div>
        </div>
    }
</div>


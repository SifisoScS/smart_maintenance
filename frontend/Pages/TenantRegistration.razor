@code {
    private TenantRegistrationModel registrationModel = new();
    private string confirmPassword = string.Empty;
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private string? subdomainError = null;
    private int currentStep = 1;
    private bool registrationComplete = false;
    private List<SubscriptionPlanInfo> availablePlans = new();

    protected override void OnInitialized()
    {
        availablePlans = SubscriptionPlanInfo.GetAllPlans();
        registrationModel.Plan = "free"; // Default to free trial
    }

    private void SelectPlan(string planId)
    {
        registrationModel.Plan = planId;
    }

    private void NextStep()
    {
        errorMessage = string.Empty;
        if (currentStep < 3)
        {
            currentStep++;
        }
    }

    private void PreviousStep()
    {
        errorMessage = string.Empty;
        if (currentStep > 1)
        {
            currentStep--;
        }
    }

    private void OnSubdomainInput(ChangeEventArgs e)
    {
        var subdomain = e.Value?.ToString()?.ToLower() ?? "";

        // Validate subdomain format
        if (string.IsNullOrEmpty(subdomain))
        {
            subdomainError = null;
            return;
        }

        if (!System.Text.RegularExpressions.Regex.IsMatch(subdomain, "^[a-z0-9-]+$"))
        {
            subdomainError = "Only lowercase letters, numbers, and hyphens allowed";
        }
        else if (subdomain.Length < 3)
        {
            subdomainError = "Subdomain must be at least 3 characters";
        }
        else if (subdomain.Length > 20)
        {
            subdomainError = "Subdomain must be 20 characters or less";
        }
        else
        {
            subdomainError = null;
        }
    }

    private bool IsStep2Valid()
    {
        return !string.IsNullOrWhiteSpace(registrationModel.Name) &&
               !string.IsNullOrWhiteSpace(registrationModel.Subdomain) &&
               registrationModel.Subdomain.Length >= 3 &&
               subdomainError == null;
    }

    private bool IsStep3Valid()
    {
        return !string.IsNullOrWhiteSpace(registrationModel.AdminFirstName) &&
               !string.IsNullOrWhiteSpace(registrationModel.AdminLastName) &&
               !string.IsNullOrWhiteSpace(registrationModel.AdminEmail) &&
               !string.IsNullOrWhiteSpace(registrationModel.AdminPassword) &&
               registrationModel.AdminPassword.Length >= 8 &&
               registrationModel.AdminPassword == confirmPassword;
    }

    private async Task HandleRegistration()
    {
        errorMessage = string.Empty;

        // Final validation
        if (!IsStep3Valid())
        {
            errorMessage = "Please fill in all required fields correctly";
            return;
        }

        try
        {
            isLoading = true;

            var response = await ApiService.RegisterTenantAsync(registrationModel);

            if (response?.Success == true)
            {
                ToastService.ShowSuccess("Organization created successfully!");
                registrationComplete = true;
            }
            else
            {
                errorMessage = response?.Message ?? "Failed to create organization. Please try again.";
                ToastService.ShowError(errorMessage);
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while creating your organization. Please try again.";
            ToastService.ShowError(errorMessage);
            Console.WriteLine($"Registration error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToLogin()
    {
        Navigation.NavigateTo("/login");
    }
}

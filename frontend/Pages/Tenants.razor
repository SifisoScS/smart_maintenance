            return;

        try
        {
            var response = await ApiService.SuspendTenantAsync(tenantToSuspend.Id, suspendReason);

            if (response?.Success == true)
            {
                ToastService.ShowSuccess($"Tenant {tenantToSuspend.Name} suspended successfully");

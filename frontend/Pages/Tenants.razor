    protected override async Task OnInitializedAsync()
    {
        currentUser = await AuthService.GetCurrentUserAsync();
        isAuthenticated = currentUser != null;

        if (isAuthenticated && currentUser?.Role == "admin")
        {
            await LoadTenants();
        }
        else
        {
            isLoading = false;
        }
    }

    private async Task LoadTenants()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            tenants = await ApiService.GetAllTenantsAsync();
            FilterTenants();
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to load tenants";
            Console.WriteLine($"Load tenants error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FilterTenants()
    {
        filteredTenants = tenants.Where(t =>
        {
            // Status filter
            if (selectedStatusFilter != "all" && t.Status.ToLower() != selectedStatusFilter.ToLower())
                return false;

            // Plan filter
            if (selectedPlanFilter != "all" && t.Plan.ToLower() != selectedPlanFilter.ToLower())
                return false;

            // Search filter
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                var search = searchTerm.ToLower();
                return t.Name.ToLower().Contains(search) || t.Subdomain.ToLower().Contains(search);
            }

            return true;
        }).ToList();
    }


    {
        try
        {
            selectedTenant = await ApiService.GetTenantByIdAsync(tenantId);
            if (selectedTenant != null)
            {
                showDetailsModal = true;
            }
            else
            {
                ToastService.ShowError("Failed to load tenant details");
            }

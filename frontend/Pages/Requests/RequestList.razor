@page "/requests"
@using frontend.Models
@using frontend.Services.Interfaces
@inject IAuthService AuthService
@inject IApiService ApiService
@inject NavigationManager Navigation
@inject IToastService ToastService

<PageTitle>Requests - Smart Maintenance</PageTitle>

<div class="requests-container">
    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border spinner-large" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading requests...</p>
        </div>
    }
    else if (!isAuthenticated)
    {
        <div class="alert alert-warning">
            <h4>‚ö†Ô∏è Authentication Required</h4>
            <p>Please <a href="/login">sign in</a> to view requests.</p>
        </div>
    }
    else
    {
        <div class="page-header">
            <div>
                <h1>üìã Maintenance Requests</h1>
                <p class="subtitle">View and manage all maintenance requests</p>
            </div>
            @if (currentUser?.Role == "client")
            {
                <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/requests/create")'>
                    + New Request
                </button>
            }
        </div>

        <!-- Analytics Charts -->
        <div class="charts-section">
            <!-- Request Status Chart -->
            <div class="chart-container">
                <div class="chart-title">
                    <i>üìä</i>
                    <h3>Request Status</h3>
                </div>
                <div class="chart-content">
                    @{
                        var statusGroups = requests.GroupBy(r => r.Status).Select(g => new { Status = g.Key, Count = g.Count() }).OrderBy(x => x.Status);
                        var maxStatusCount = statusGroups.Any() ? statusGroups.Max(g => g.Count) : 1;
                    }
                    @foreach (var group in statusGroups)
                    {
                        var percentage = maxStatusCount > 0 ? (group.Count * 100.0 / maxStatusCount) : 0;
                        <div class="chart-bar-row">
                            <span class="chart-label">@group.Status</span>
                            <div class="chart-bar-container">
                                <div class="chart-bar chart-bar-@group.Status" style="width: @percentage%"></div>
                            </div>
                            <span class="chart-value">@group.Count</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Priority Distribution Chart -->
            <div class="chart-container">
                <div class="chart-title">
                    <i>üî•</i>
                    <h3>Priority Distribution</h3>
                </div>
                <div class="chart-content">
                    @{
                        var priorityGroups = requests.GroupBy(r => r.Priority).Select(g => new { Priority = g.Key, Count = g.Count() }).OrderBy(x => x.Priority);
                        var maxPriorityCount = priorityGroups.Any() ? priorityGroups.Max(g => g.Count) : 1;
                    }
                    @foreach (var group in priorityGroups)
                    {
                        var percentage = maxPriorityCount > 0 ? (group.Count * 100.0 / maxPriorityCount) : 0;
                        <div class="chart-bar-row">
                            <span class="chart-label">@group.Priority</span>
                            <div class="chart-bar-container">
                                <div class="chart-bar chart-bar-priority-@group.Priority" style="width: @percentage%"></div>
                            </div>
                            <span class="chart-value">@group.Count</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Request Type Distribution -->
            <div class="chart-container">
                <div class="chart-title">
                    <i>‚öôÔ∏è</i>
                    <h3>Request Types</h3>
                </div>
                <div class="chart-content">
                    @{
                        var typeGroups = requests.GroupBy(r => r.RequestType ?? "general").Select(g => new { Type = g.Key, Count = g.Count() }).OrderByDescending(x => x.Count);
                        var maxTypeCount = typeGroups.Any() ? typeGroups.Max(g => g.Count) : 1;
                    }
                    @foreach (var group in typeGroups)
                    {
                        var percentage = maxTypeCount > 0 ? (group.Count * 100.0 / maxTypeCount) : 0;
                        <div class="chart-bar-row">
                            <span class="chart-label">@group.Type</span>
                            <div class="chart-bar-container">
                                <div class="chart-bar chart-bar-type" style="width: @percentage%"></div>
                            </div>
                            <span class="chart-value">@group.Count</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Summary Stats -->
            <div class="chart-container">
                <div class="chart-title">
                    <i>üìà</i>
                    <h3>Summary Statistics</h3>
                </div>
                <div class="stat-summary">
                    <div class="stat-item">
                        <div class="stat-label">Total Requests</div>
                        <div class="stat-number">@requests.Count</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Active</div>
                        <div class="stat-number">@requests.Count(r => r.Status != "completed")</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-label">Completed</div>
                        <div class="stat-number">@requests.Count(r => r.Status == "completed")</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="filters-section">
            <div class="filters-grid">
                <div class="filter-group">
                    <label>Status</label>
                    <select class="form-control" @bind="selectedStatus">
                        <option value="">All Statuses</option>
                        <option value="submitted">Submitted</option>
                        <option value="assigned">Assigned</option>
                        <option value="in_progress">In Progress</option>
                        <option value="completed">Completed</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label>Priority</label>
                    <select class="form-control" @bind="selectedPriority">
                        <option value="">All Priorities</option>
                        <option value="low">Low</option>
                        <option value="medium">Medium</option>
                        <option value="high">High</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label>Type</label>
                    <select class="form-control" @bind="selectedType">
                        <option value="">All Types</option>
                        <option value="electrical">Electrical</option>
                        <option value="plumbing">Plumbing</option>
                        <option value="hvac">HVAC</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label>Search</label>
                    <input type="text" class="form-control" placeholder="Search title..." @bind="searchQuery" @bind:event="oninput" />
                </div>
            </div>

            <div class="filter-actions">
                <button class="btn btn-secondary" @onclick="ClearFilters">Clear Filters</button>
                <span class="results-count">Showing @FilteredRequests.Count of @requests.Count requests</span>
            </div>
        </div>

        <!-- Requests Grid -->
        @if (FilteredRequests.Any())
        {
            <div class="requests-grid">
                @foreach (var request in FilteredRequests)
                {
                    <div class="request-card" @onclick='() => Navigation.NavigateTo($"/requests/{request.Id}")'>
                        <div class="request-card-header">
                            <h3>@request.Title</h3>
                            <div class="request-badges">
                                <span class="priority-badge priority-@request.Priority">@request.Priority</span>
                                <span class="status-badge status-@request.Status">@request.Status</span>
                            </div>
                        </div>

                        <div class="request-card-body">
                            <p class="request-description">@request.Description</p>

                            <div class="request-meta">
                                <div class="meta-item">
                                    <span class="meta-label">Type:</span>
                                    <span class="meta-value">@request.Type</span>
                                </div>
                                <div class="meta-item">
                                    <span class="meta-label">Asset:</span>
                                    <span class="meta-value">Asset #@request.AssetId</span>
                                </div>
                                @if (request.AssignedTechnicianId.HasValue)
                                {
                                    <div class="meta-item">
                                        <span class="meta-label">Assigned to:</span>
                                        <span class="meta-value">Technician #@request.AssignedTechnicianId</span>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="request-card-footer">
                            <span class="request-date">Created: @request.CreatedAt.ToString("MMM dd, yyyy")</span>
                            <span class="view-link">View Details ‚Üí</span>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">üì≠</div>
                <h3>No requests found</h3>
                <p>@GetEmptyStateMessage()</p>
                @if (currentUser?.Role == "client")
                {
                    <button class="btn btn-primary" style="margin-top: 16px" @onclick='() => Navigation.NavigateTo("/requests/create")'>
                        Create Your First Request
                    </button>
                }
            </div>
        }
    }
</div>


@code {
    private bool isLoading = true;
    private bool isAuthenticated = false;
    private UserModel? currentUser;
    private List<RequestModel> requests = new();

    // Filter properties
    private string selectedStatus = "";
    private string selectedPriority = "";
    private string selectedType = "";
    private string searchQuery = "";

    private List<RequestModel> FilteredRequests
    {
        get
        {
            var filtered = requests.AsEnumerable();

            // Apply status filter
            if (!string.IsNullOrEmpty(selectedStatus))
            {
                filtered = filtered.Where(r => r.Status == selectedStatus);
            }

            // Apply priority filter
            if (!string.IsNullOrEmpty(selectedPriority))
            {
                filtered = filtered.Where(r => r.Priority == selectedPriority);
            }

            // Apply type filter
            if (!string.IsNullOrEmpty(selectedType))
            {
                filtered = filtered.Where(r => r.Type == selectedType);
            }

            // Apply search query
            if (!string.IsNullOrEmpty(searchQuery))
            {
                filtered = filtered.Where(r =>
                    r.Title.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                    r.Description.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));
            }

            return filtered.OrderByDescending(r => r.CreatedAt).ToList();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;

            // Check authentication
            isAuthenticated = await AuthService.IsAuthenticatedAsync();

            if (!isAuthenticated)
            {
                Navigation.NavigateTo("/login");
                return;
            }

            // Get current user
            currentUser = await AuthService.GetCurrentUserAsync();

            // Load requests
            await LoadRequests();
        }
        catch (Exception ex)
        {
            ToastService.ShowError("Failed to load requests");
            Console.WriteLine($"Error loading requests: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadRequests()
    {
        try
        {
            requests = await ApiService.GetRequestsAsync() ?? new();

            // Filter by user role
            if (currentUser?.Role == "technician")
            {
                // Technicians see all requests (can pick up any)
                // Or filter to show assigned + unassigned if preferred
            }
            else if (currentUser?.Role == "client")
            {
                // Clients see only their own requests
                requests = requests.Where(r => r.SubmitterId == currentUser.Id).ToList();
            }
            // Admins see all requests (no filter)
        }
        catch (Exception ex)
        {
            ToastService.ShowError("Failed to load requests");
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private void ClearFilters()
    {
        selectedStatus = "";
        selectedPriority = "";
        selectedType = "";
        searchQuery = "";
    }

    private string GetEmptyStateMessage()
    {
        if (!string.IsNullOrEmpty(selectedStatus) || !string.IsNullOrEmpty(selectedPriority) ||
            !string.IsNullOrEmpty(selectedType) || !string.IsNullOrEmpty(searchQuery))
        {
            return "Try adjusting your filters to see more results";
        }

        return currentUser?.Role switch
        {
            "client" => "You haven't submitted any requests yet",
            "technician" => "No maintenance requests available",
            "admin" => "No requests in the system yet",
            _ => "No requests found"
        };
    }
}

        to {
            transform: rotate(360deg);
        }
    }

    /* Responsive design */
    @@media (max-width: 640px) {
        .register-card {
            padding: 30px 20px;
        }

        .register-header h2 {
            font-size: 24px;
        }
    }
</style>

@code {
    private RegisterRequest registerRequest = new();
    private string confirmPassword = string.Empty;
    private bool isLoading = false;
    private string errorMessage = string.Empty;

    private async Task HandleRegister()
    {
        // Clear previous errors
        errorMessage = string.Empty;

        // Validate passwords match
        if (registerRequest.Password != confirmPassword)
        {
            errorMessage = "Passwords do not match";
            return;
        }

        // Validate password strength (backend requires 8-100 chars)
        if (registerRequest.Password.Length < 8)
        {
            errorMessage = "Password must be at least 8 characters long";
            return;
        }

        if (registerRequest.Password.Length > 100)
        {
            errorMessage = "Password must not exceed 100 characters";
            return;
        }

        // Validate email format (basic)
        if (!registerRequest.Email.Contains("@") || !registerRequest.Email.Contains("."))
        {
            errorMessage = "Please enter a valid email address";
            return;
        }

        // Validate first name
        if (string.IsNullOrWhiteSpace(registerRequest.FirstName))
        {
            errorMessage = "First name is required";
            return;
        }

        // Validate last name
        if (string.IsNullOrWhiteSpace(registerRequest.LastName))
        {
            errorMessage = "Last name is required";
            return;
        }

        try
        {
            isLoading = true;

            // Call the register service
            var response = await AuthService.RegisterAsync(registerRequest);

            if (response.Success)
            {
                // Show success message
                ToastService.ShowSuccess("Account created successfully! Please sign in.");

                // Redirect to login page
                Navigation.NavigateTo("/login");
            }
            else
            {
                // Show error message from backend with details
                if (response.Error?.Details != null && response.Error.Details.Any())
                {
                    // Build detailed error message from validation details
                    var details = string.Join(", ", response.Error.Details
                        .SelectMany(d => d.Value.Select(v => $"{d.Key}: {v}")));
                    errorMessage = $"{response.Error.Message}. {details}";
                }
                else
                {
                    errorMessage = response.Error?.Message ?? response.Message ?? "Registration failed. Please try again.";
                }

                ToastService.ShowError(errorMessage);
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while creating your account. Please try again.";
            ToastService.ShowError(errorMessage);
            Console.WriteLine($"Registration error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    protected override void OnInitialized()
    {
        // Set default role to client
        registerRequest.Role = "client";
    }
}

@page "/permissions"
@using frontend.Models
@using frontend.Services.Interfaces
@inject IAuthService AuthService
@inject IApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Permissions - Smart Maintenance</PageTitle>

<div class="permissions-container">
    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border spinner-large" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading permissions...</p>
        </div>
    }
    else if (!isAuthenticated || currentUser == null)
    {
        <div class="alert alert-warning">
            <h4>‚ö†Ô∏è Authentication Required</h4>
            <p>Please <a href="/login">sign in</a> to view permissions.</p>
        </div>
    }
    else if (currentUser.Role != "admin")
    {
        <div class="alert alert-danger">
            <h4>üîí Access Denied</h4>
            <p>Only administrators can view permissions.</p>
        </div>
    }
    else
    {
        <div class="page-header">
            <div class="header-content">
                <div>
                    <h1>System Permissions</h1>
                    <p class="subtitle">View all available permissions in the system</p>
                </div>
                <div class="header-actions">
                    <button class="btn btn-secondary" @onclick="LoadPermissions">
                        üîÑ Refresh
                    </button>
                </div>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="summary-cards">
            <div class="summary-card">
                <div class="card-icon total">üîë</div>
                <div class="card-content">
                    <div class="card-value">@permissions.Count</div>
                    <div class="card-label">Total Permissions</div>
                </div>
            </div>
            <div class="summary-card">
                <div class="card-icon resources">üì¶</div>
                <div class="card-content">
                    <div class="card-value">@(groupedPermissions?.Grouped.Count ?? 0)</div>
                    <div class="card-label">Resources</div>
                </div>
            </div>
            <div class="summary-card">
                <div class="card-icon actions">‚ö°</div>
                <div class="card-content">
                    <div class="card-value">@permissions.Select(p => p.Action).Distinct().Count()</div>
                    <div class="card-label">Unique Actions</div>
                </div>
            </div>
        </div>

        <!-- Filter by Resource -->
        <div class="filters">
            <label>Filter by Resource:</label>
            <select class="form-select" @bind="selectedResource" @bind:after="FilterPermissions">
                <option value="all">All Resources</option>
                @if (groupedPermissions != null)
                {
                    @foreach (var resource in groupedPermissions.Grouped.Keys.OrderBy(k => k))
                    {
                        <option value="@resource">@resource.ToUpper()</option>
                    }
                }
            </select>

            <label style="margin-left: 20px;">Search:</label>
            <input type="text"
                   class="form-control"
                   placeholder="Search permissions..."
                   style="max-width: 300px;"
                   @bind="searchTerm"
                   @bind:event="oninput"
                   @bind:after="FilterPermissions" />
        </div>

        @if (errorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <strong>Error:</strong> @errorMessage
                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
            </div>
        }

        <!-- Permissions Display -->
        @if (filteredPermissions.Count == 0)
        {
            <div class="no-data">
                <p>No permissions found matching your search criteria.</p>
            </div>
        }
        else if (selectedResource == "all")
        {
            <!-- Grouped View -->
            @if (groupedPermissions != null && groupedPermissions.Grouped.Any())
            {
                <div class="permissions-grouped">
                    @foreach (var group in groupedPermissions.Grouped.OrderBy(g => g.Key))
                    {
                        var visiblePermissions = group.Value.Where(p =>
                            string.IsNullOrWhiteSpace(searchTerm) ||
                            p.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                            p.Description?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) == true ||
                            p.Action.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                        ).ToList();

                        @if (visiblePermissions.Any())
                        {
                            <div class="permission-group">
                                <div class="group-header">
                                    <div class="group-title">
                                        <span class="resource-icon">@GetResourceIcon(group.Key)</span>
                                        <h3>@group.Key.ToUpper()</h3>
                                    </div>
                                    <span class="count-badge">@visiblePermissions.Count permission(s)</span>
                                </div>

                                <div class="permission-list">
                                    @foreach (var permission in visiblePermissions.OrderBy(p => p.Action))
                                    {
                                        <div class="permission-item">
                                            <div class="permission-main">
                                                <div class="permission-header">
                                                    <span class="permission-action">@permission.Action</span>
                                                    <span class="permission-name-code">@permission.Name</span>
                                                </div>
                                                <p class="permission-description">@permission.Description</p>
                                            </div>
                                            <div class="permission-meta">
                                                <span class="meta-badge">@permission.Resource:@permission.Action</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            }
        }
        else
        {
            <!-- Single Resource View -->
            <div class="permission-group">
                <div class="group-header">
                    <div class="group-title">
                        <span class="resource-icon">@GetResourceIcon(selectedResource)</span>
                        <h3>@selectedResource.ToUpper()</h3>
                    </div>
                    <span class="count-badge">@filteredPermissions.Count permission(s)</span>
                </div>

                <div class="permission-list">
                    @foreach (var permission in filteredPermissions.OrderBy(p => p.Action))
                    {
                        <div class="permission-item">
                            <div class="permission-main">
                                <div class="permission-header">
                                    <span class="permission-action">@permission.Action</span>
                                    <span class="permission-name-code">@permission.Name</span>
                                </div>
                                <p class="permission-description">@permission.Description</p>
                            </div>
                            <div class="permission-meta">
                                <span class="meta-badge">@permission.Resource:@permission.Action</span>
                                <small class="text-muted">ID: @permission.Id</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Quick Reference Table -->
        <div class="quick-reference-section">
            <h2>Quick Reference</h2>
            <p class="subtitle">Common permission patterns</p>

            <div class="reference-grid">
                <div class="reference-card">
                    <h4>View Permissions</h4>
                    <p>Allow users to view/read resources</p>
                    <div class="reference-examples">
                        @foreach (var perm in permissions.Where(p => p.Action.Contains("view")).Take(3))
                        {
                            <span class="example-badge">@perm.Name</span>
                        }
                    </div>
                </div>

                <div class="reference-card">
                    <h4>Create Permissions</h4>
                    <p>Allow users to create new resources</p>
                    <div class="reference-examples">
                        @foreach (var perm in permissions.Where(p => p.Action.Contains("create")).Take(3))
                        {
                            <span class="example-badge">@perm.Name</span>
                        }
                    </div>
                </div>

                <div class="reference-card">
                    <h4>Edit Permissions</h4>
                    <p>Allow users to modify existing resources</p>
                    <div class="reference-examples">
                        @foreach (var perm in permissions.Where(p => p.Action.Contains("edit")).Take(3))
                        {
                            <span class="example-badge">@perm.Name</span>
                        }
                    </div>
                </div>

                <div class="reference-card">
                    <h4>Delete Permissions</h4>
                    <p>Allow users to delete resources</p>
                    <div class="reference-examples">
                        @foreach (var perm in permissions.Where(p => p.Action.Contains("delete")).Take(3))
                        {
                            <span class="example-badge">@perm.Name</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private bool isAuthenticated = false;
    private UserModel? currentUser;

    private List<PermissionModel> permissions = new();
    private List<PermissionModel> filteredPermissions = new();
    private GroupedPermissionsResponse? groupedPermissions;

    private string selectedResource = "all";
    private string searchTerm = string.Empty;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();

        if (isAuthenticated)
        {
            currentUser = await AuthService.GetCurrentUserAsync();
        }

        await LoadPermissions();
        isLoading = false;
    }

    private async Task LoadPermissions()
    {
        try
        {
            errorMessage = null;
            permissions = await ApiService.GetPermissionsAsync();
            groupedPermissions = await ApiService.GetPermissionsGroupedAsync();
            FilterPermissions();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load permissions: {ex.Message}";
            permissions = new List<PermissionModel>();
        }
    }

    private void FilterPermissions()
    {
        var query = permissions.AsEnumerable();

        // Filter by resource
        if (selectedResource != "all")
        {
            query = query.Where(p => p.Resource.Equals(selectedResource, StringComparison.OrdinalIgnoreCase));
        }

        // Filter by search term
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            query = query.Where(p =>
                p.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                p.Description?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) == true ||
                p.Action.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                p.Resource.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
            );
        }

        filteredPermissions = query.ToList();
    }

    private string GetResourceIcon(string resource)
    {
        return resource.ToLower() switch
        {
            "requests" => "üìù",
            "assets" => "üè¢",
            "users" => "üë•",
            "analytics" => "üìä",
            "feature_flags" => "üö©",
            "roles" => "üë§",
            "permissions" => "üîë",
            "system" => "‚öôÔ∏è",
            _ => "üì¶"
        };
    }
}


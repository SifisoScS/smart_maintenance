@code {
    private bool isLoading = true;
    private bool isAuthenticated = false;
    private UserModel? currentUser;
    private PredictiveInsightsModel? insights;
    private List<WorkloadModel> workloadData = new();
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;

            // Check authentication
            isAuthenticated = await AuthService.IsAuthenticatedAsync();

            if (!isAuthenticated)
            {
                Navigation.NavigateTo("/login");
                return;
            }

            // Get current user
            currentUser = await AuthService.GetCurrentUserAsync();

            if (currentUser == null || currentUser.Role != "admin")
            {
                ToastService.ShowWarning("Only administrators can access predictive insights");
                return;
            }

            // Load predictive insights
            await LoadInsights();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load predictive insights: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadInsights()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;

            // Get insights from API
            insights = await ApiService.GetPredictiveInsightsAsync();

            // Get workload data
            workloadData = await ApiService.GetTechnicianWorkloadAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load insights: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetRiskLevel(double riskScore)
    {
        if (riskScore >= 0.8) return "critical";
        if (riskScore >= 0.6) return "high";
        if (riskScore >= 0.4) return "medium";
        return "low";
    }

    private string GetWorkloadLevelClass(string workloadLevel)
    {
        return workloadLevel.ToLower() switch
        {
            "available" => "available",
            "light" => "light",
            "moderate" => "moderate",
            "heavy" => "heavy",
            "overloaded" => "overloaded",
            _ => "moderate"
        };
    }

    private string GetHealthStatus(double health)
    {
        if (health >= 70) return "success";
        if (health >= 50) return "warning";
        return "danger";
    }


@page "/predictive"
@using frontend.Models
@using frontend.Services.Interfaces
@inject IAuthService AuthService
@inject IApiService ApiService
@inject NavigationManager Navigation
@inject IToastService ToastService

<PageTitle>Predictive Insights - Smart Maintenance</PageTitle>

<div class="predictive-container">
    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border spinner-large" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Analyzing assets and generating predictions...</p>
        </div>
    }
    else if (!isAuthenticated || currentUser?.Role != "admin")
    {
        <div class="alert alert-warning">
            <h4>‚ö†Ô∏è Access Restricted</h4>
            <p>Only administrators can access predictive maintenance insights.</p>
        </div>
    }
    else
    {
        <div class="page-header">
            <div>
                <h1>üîÆ Predictive Insights</h1>
                <p class="subtitle">AI-powered maintenance predictions and smart recommendations</p>
            </div>
            <div class="header-badge">
                <span class="powered-badge">‚ö° Zero-Cost Intelligence</span>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">
                <strong>Error:</strong> @errorMessage
            </div>
        }
        else if (insights != null)
        {
            <!-- Alerts Section -->
            @if (insights.Alerts.Any())
            {
                <div class="alerts-section">
                    @foreach (var alert in insights.Alerts)
                    {
                        <div class="alert-card alert-@alert.Severity">
                            <div class="alert-icon">‚ö†Ô∏è</div>
                            <div class="alert-content">
                                <h4>@alert.Title</h4>
                                <p>@alert.Message</p>
                                <span class="alert-action">Action: @alert.ActionRequired</span>
                            </div>
                        </div>
                    }
                </div>
            }

            <!-- Summary Cards -->
            <div class="stats-grid">
                <div class="stat-card stat-card-primary">
                    <div class="stat-icon">üìä</div>
                    <div class="stat-content">
                        <div class="stat-label">Total Assets</div>
                        <div class="stat-value">@insights.Summary.TotalAssets</div>
                        <div class="stat-description">Under monitoring</div>
                    </div>
                </div>

                <div class="stat-card stat-card-danger">
                    <div class="stat-icon">‚ö†Ô∏è</div>
                    <div class="stat-content">
                        <div class="stat-label">Critical Assets</div>
                        <div class="stat-value">@insights.Summary.CriticalAssets</div>
                        <div class="stat-description">Immediate attention needed</div>
                    </div>
                </div>

                <div class="stat-card stat-card-warning">
                    <div class="stat-icon">üìÖ</div>
                    <div class="stat-content">
                        <div class="stat-label">Next 7 Days</div>
                        <div class="stat-value">@insights.Summary.UpcomingMaintenance7d</div>
                        <div class="stat-description">Scheduled maintenance</div>
                    </div>
                </div>

                <div class="stat-card stat-card-success">
                    <div class="stat-icon">üíö</div>
                    <div class="stat-content">
                        <div class="stat-label">Avg Health</div>
                        <div class="stat-value">@insights.Summary.AverageHealth.ToString("F1")</div>
                        <div class="stat-description">Out of 100</div>
                    </div>
                </div>
            </div>

            <!-- Top Risk Assets -->
            <div class="section-container">
                <div class="section-header">
                    <h2>üö® Assets Requiring Attention</h2>
                    <span class="badge badge-count">@insights.TopRiskAssets.Count assets</span>
                </div>

                @if (insights.TopRiskAssets.Any())
                {
                    <div class="risk-assets-grid">
                        @foreach (var asset in insights.TopRiskAssets)
                        {
                            var riskLevel = GetRiskLevel(asset.Prediction.RiskScore);
                            <div class="risk-asset-card risk-@riskLevel" @onclick="@(() => ViewAssetDetails(asset.AssetInfo.Id))">
                                <div class="risk-header">
                                    <h3>@asset.AssetInfo.Name</h3>
                                    <div class="risk-score">
                                        <span class="score-label">Risk:</span>
                                        <span class="score-value">@((asset.Prediction.RiskScore * 100).ToString("F0"))%</span>
                                    </div>
                                </div>

                                <div class="risk-body">
                                    <div class="risk-meta">
                                        <span class="meta-item">
                                            <strong>Code:</strong> @asset.AssetInfo.AssetCode
                                        </span>
                                        <span class="meta-item">
                                            <strong>Location:</strong> @asset.AssetInfo.Location
                                        </span>
                                        <span class="meta-item">
                                            <strong>Health:</strong> @asset.HealthScore.ToString("F0")/100
                                        </span>
                                    </div>

                                    <div class="risk-reasoning">
                                        <p>@asset.Prediction.Reasoning</p>
                                    </div>

                                    <div class="risk-action">
                                        <strong>Recommended Action:</strong>
                                        <p>@asset.Prediction.RecommendedAction</p>
                                    </div>

                                    @if (asset.Prediction.PredictedFailureDate.HasValue)
                                    {
                                        <div class="risk-date">
                                            <span class="date-label">Predicted Failure:</span>
                                            <span class="date-value">@asset.Prediction.PredictedFailureDate.Value.ToString("MMM dd, yyyy")</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-icon">‚úÖ</div>
                        <p>No high-risk assets - All systems operating normally</p>
                    </div>
                }
            </div>

            <!-- Charts Section -->
            <div class="charts-section">
                <!-- Maintenance Schedule -->
                <div class="chart-container">
                    <div class="chart-title">
                        <i>üìÖ</i>
                        <h3>Maintenance Schedule (Next 30 Days)</h3>
                    </div>
                    <div class="chart-content">
                        @if (insights.MaintenanceCalendar.Any())
                        {
                            var calendarItems = insights.MaintenanceCalendar
                                .OrderBy(kv => DateTime.Parse(kv.Key))
                                .Take(10);

                            @foreach (var day in calendarItems)
                            {
                                var date = DateTime.Parse(day.Key);
                                var count = day.Value.Count;
                                var maxCount = insights.MaintenanceCalendar.Max(kv => kv.Value.Count);
                                var percentage = (count * 100.0 / maxCount);

                                <div class="chart-bar-row">
                                    <span class="chart-label">@date.ToString("MMM dd")</span>
                                    <div class="chart-bar-container">
                                        <div class="chart-bar chart-bar-maintenance" style="width: @percentage%"></div>
                                    </div>
                                    <span class="chart-value">@count</span>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="empty-state-small">
                                <p>No scheduled maintenance in the next 30 days</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Workload Distribution -->
                <div class="chart-container">
                    <div class="chart-title">
                        <i>üë•</i>
                        <h3>Technician Workload</h3>
                    </div>
                    <div class="chart-content">
                        @if (workloadData.Any())
                        {
                            var maxWorkload = workloadData.Max(w => w.ActiveRequests);
                            if (maxWorkload == 0) maxWorkload = 1;

                            @foreach (var tech in workloadData.Take(8))
                            {
                                var percentage = (tech.ActiveRequests * 100.0 / maxWorkload);
                                var levelClass = GetWorkloadLevelClass(tech.WorkloadLevel);

                                <div class="chart-bar-row">
                                    <span class="chart-label">@tech.TechnicianName</span>
                                    <div class="chart-bar-container">
                                        <div class="chart-bar chart-bar-@levelClass" style="width: @percentage%"></div>
                                    </div>
                                    <span class="chart-value">@tech.ActiveRequests</span>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="empty-state-small">
                                <p>No technician data available</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Recommendations Section -->
            <div class="recommendations-section">
                <div class="section-header">
                    <h2>üí° Smart Recommendations</h2>
                </div>

                <div class="recommendations-grid">
                    @foreach (var recommendation in insights.Recommendations)
                    {
                        <div class="recommendation-card">
                            <div class="recommendation-icon">
                                @if (recommendation.StartsWith("‚ö†Ô∏è") || recommendation.StartsWith("üö®"))
                                {
                                    <span>‚ö†Ô∏è</span>
                                }
                                else if (recommendation.StartsWith("üìÖ"))
                                {
                                    <span>üìÖ</span>
                                }
                                else if (recommendation.StartsWith("‚öñÔ∏è"))
                                {
                                    <span>‚öñÔ∏è</span>
                                }
                                else if (recommendation.StartsWith("üîß"))
                                {
                                    <span>üîß</span>
                                }
                                else
                                {
                                    <span>‚úÖ</span>
                                }
                            </div>
                            <div class="recommendation-text">@recommendation</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Trends Section -->
            @if (insights.Trends != null)
            {
                <div class="trends-section">
                    <div class="section-header">
                        <h2>üìà System Trends</h2>
                    </div>

                    <div class="trends-grid">
                        <div class="trend-card">
                            <div class="trend-label">Average Health</div>
                            <div class="trend-value trend-@GetHealthStatus(insights.Trends.AverageHealth)">
                                @insights.Trends.AverageHealth.ToString("F1")
                            </div>
                            <div class="trend-status">@insights.Trends.HealthStatus</div>
                        </div>

                        <div class="trend-card">
                            <div class="trend-label">Critical Assets</div>
                            <div class="trend-value trend-@(insights.Trends.CriticalAssets > 0 ? "danger" : "success")">
                                @insights.Trends.CriticalAssets
                            </div>
                            <div class="trend-status">
                                @(insights.Trends.CriticalAssets > 0 ? "Action Required" : "All Clear")
                            </div>
                        </div>

                        <div class="trend-card">
                            <div class="trend-label">Maintenance Workload</div>
                            <div class="trend-value">@insights.Trends.MaintenanceWorkload30d</div>
                            <div class="trend-status">@insights.Trends.WorkloadLevel</div>
                        </div>
                    </div>
                </div>
            }

            <!-- Last Updated -->
            <div class="update-timestamp">
                <span>Last updated: @insights.GeneratedAt.ToString("MMM dd, yyyy h:mm tt")</span>
                <button class="btn btn-secondary btn-sm" @onclick="LoadInsights">
                    üîÑ Refresh
                </button>
            </div>
        }
    }
</div>


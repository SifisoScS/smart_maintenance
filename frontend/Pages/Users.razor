@page "/users"
@using frontend.Models
@using frontend.Services.Interfaces
@using Microsoft.JSInterop
@inject IAuthService AuthService
@inject IApiService ApiService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Users - Smart Maintenance</PageTitle>

<div class="users-container">
    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border spinner-large" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading users...</p>
        </div>
    }
    else if (!isAuthenticated || currentUser == null)
    {
        <div class="alert alert-warning">
            <h4>‚ö†Ô∏è Authentication Required</h4>
            <p>Please <a href="/login">sign in</a> to view users.</p>
        </div>
    }
    else if (currentUser.Role != "admin")
    {
        <div class="alert alert-danger">
            <h4>üîí Access Denied</h4>
            <p>Only administrators can manage users.</p>
        </div>
    }
    else
    {
        <div class="page-header">
            <div class="header-content">
                <div>
                    <h1>User Management</h1>
                    <p class="subtitle">Manage users and their role assignments</p>
                </div>
                <div class="header-actions">
                    <button class="btn btn-secondary" @onclick="LoadUsers">
                        üîÑ Refresh
                    </button>
                </div>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="summary-cards">
            <div class="summary-card">
                <div class="card-icon total">üë•</div>
                <div class="card-content">
                    <div class="card-value">@users.Count</div>
                    <div class="card-label">Total Users</div>
                </div>
            </div>
            <div class="summary-card">
                <div class="card-icon active">‚úÖ</div>
                <div class="card-content">
                    <div class="card-value">@users.Count(u => u.IsActive)</div>
                    <div class="card-label">Active</div>
                </div>
            </div>
            <div class="summary-card">
                <div class="card-icon inactive">‚ùå</div>
                <div class="card-content">
                    <div class="card-value">@users.Count(u => !u.IsActive)</div>
                    <div class="card-label">Inactive</div>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="filters">
            <label>Filter by Role:</label>
            <select class="form-select" @bind="selectedRoleFilter" @bind:after="FilterUsers">
                <option value="all">All Roles</option>
                <option value="admin">Admin</option>
                <option value="technician">Technician</option>
                <option value="client">Client</option>
            </select>

            <label style="margin-left: 20px;">Search:</label>
            <input type="text"
                   class="form-control"
                   placeholder="Search by name or email..."
                   style="max-width: 300px;"
                   @bind="searchTerm"
                   @bind:event="oninput"
                   @bind:after="FilterUsers" />
        </div>

        @if (errorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <strong>Error:</strong> @errorMessage
                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
            </div>
        }

        @if (successMessage != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <strong>Success:</strong> @successMessage
                <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
            </div>
        }

        <!-- Users Table -->
        @if (filteredUsers.Count == 0)
        {
            <div class="no-data">
                <p>No users found matching your search criteria.</p>
            </div>
        }
        else
        {
            <div class="users-table-container">
                <table class="users-table">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Legacy Role</th>
                            <th>RBAC Roles</th>
                            <th>Status</th>
                            <th>Joined</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in filteredUsers)
                        {
                            <tr>
                                <td>
                                    <div class="user-cell">
                                        <div class="user-avatar">@user.FullName.Substring(0, 1).ToUpper()</div>
                                        <strong>@user.FullName</strong>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge badge-legacy">@user.Role</span>
                                </td>
                                <td>
                                    <div class="roles-cell">
                                        @if (userRoles.ContainsKey(user.Id))
                                        {
                                            @if (userRoles[user.Id].Any())
                                            {
                                                @foreach (var role in userRoles[user.Id])
                                                {
                                                    <span class="badge @(role.IsSystem ? "badge-system" : "badge-custom")">
                                                        @role.Name
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">No roles assigned</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="spinner-border spinner-border-sm"></span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="status-badge active">Active</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge inactive">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <small>@user.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-primary" @onclick="() => OpenRoleAssignmentModal(user)">
                                        üîë Manage Roles
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <!-- Role Assignment Modal -->
        @if (showRoleModal && selectedUser != null)
        {
            <div class="modal-backdrop" @onclick="CloseRoleModal"></div>
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Manage Roles for @selectedUser.FullName</h3>
                        <button class="btn-close" @onclick="CloseRoleModal"></button>
                    </div>

                    <div class="modal-body">
                        <p class="modal-subtitle">
                            <strong>Email:</strong> @selectedUser.Email<br/>
                            <strong>Legacy Role:</strong> @selectedUser.Role
                        </p>

                        @if (userRoles.ContainsKey(selectedUser.Id))
                        {
                            <div class="current-roles">
                                <h4>Current RBAC Roles:</h4>
                                @if (userRoles[selectedUser.Id].Any())
                                {
                                    <div class="role-badges">
                                        @foreach (var role in userRoles[selectedUser.Id])
                                        {
                                            <div class="role-badge-item">
                                                <span class="badge @(role.IsSystem ? "badge-system" : "badge-custom")">
                                                    @role.Name
                                                </span>
                                                <button class="btn-remove" @onclick="() => RemoveUserRole(selectedUser.Id, role.Id)">
                                                    ‚úï
                                                </button>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted">No RBAC roles assigned yet.</p>
                                }
                            </div>
                        }

                        <div class="assign-role">
                            <h4>Assign New Role:</h4>
                            <div class="assign-form">
                                <select class="form-select" @bind="selectedRoleToAssign">
                                    <option value="">-- Select a role --</option>
                                    @foreach (var role in availableRoles)
                                    {
                                        <option value="@role.Id">@role.Name (@role.DisplayPermissionCount permissions)</option>
                                    }
                                </select>
                                <button class="btn btn-primary"
                                        disabled="@(string.IsNullOrEmpty(selectedRoleToAssign))"
                                        @onclick="AssignRoleToUser">
                                    ‚ûï Assign Role
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-secondary" @onclick="CloseRoleModal">Close</button>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private bool isLoading = true;
    private bool isAuthenticated = false;
    private UserModel? currentUser;

    private List<UserModel> users = new();
    private List<UserModel> filteredUsers = new();
    private Dictionary<int, List<RoleModel>> userRoles = new();
    private List<RoleModel> availableRoles = new();

    private string selectedRoleFilter = "all";
    private string searchTerm = string.Empty;
    private string? errorMessage;
    private string? successMessage;

    // Modal state
    private bool showRoleModal = false;
    private UserModel? selectedUser = null;
    private string selectedRoleToAssign = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        isAuthenticated = await AuthService.IsAuthenticatedAsync();

        if (isAuthenticated)
        {
            currentUser = await AuthService.GetCurrentUserAsync();
        }

        await LoadUsers();
        await LoadAvailableRoles();
        isLoading = false;
    }

    private async Task LoadUsers()
    {
        try
        {
            errorMessage = null;
            users = await ApiService.GetUsersAsync();
            FilterUsers();

            // Load roles for each user
            foreach (var user in users)
            {
                await LoadUserRoles(user.Id);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load users: {ex.Message}";
            users = new List<UserModel>();
        }
    }

    private async Task LoadUserRoles(int userId)
    {
        try
        {
            var rolesResponse = await ApiService.GetUserRolesAsync(userId);
            if (rolesResponse != null)
            {
                userRoles[userId] = rolesResponse.Roles;
            }
            else
            {
                userRoles[userId] = new List<RoleModel>();
            }
        }
        catch
        {
            userRoles[userId] = new List<RoleModel>();
        }
    }

    private async Task LoadAvailableRoles()
    {
        try
        {
            availableRoles = await ApiService.GetRolesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load roles: {ex.Message}";
            availableRoles = new List<RoleModel>();
        }
    }

    private void FilterUsers()
    {
        var query = users.AsEnumerable();

        // Filter by role
        if (selectedRoleFilter != "all")
        {
            query = query.Where(u => u.Role.Equals(selectedRoleFilter, StringComparison.OrdinalIgnoreCase));
        }

        // Filter by search term
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            query = query.Where(u =>
                u.FullName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                u.Email.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
            );
        }

        filteredUsers = query.ToList();
    }

    private void OpenRoleAssignmentModal(UserModel user)
    {
        selectedUser = user;
        selectedRoleToAssign = string.Empty;
        showRoleModal = true;
    }

    private void CloseRoleModal()
    {
        showRoleModal = false;
        selectedUser = null;
        selectedRoleToAssign = string.Empty;
    }

    private async Task AssignRoleToUser()
    {
        if (selectedUser == null || string.IsNullOrEmpty(selectedRoleToAssign))
            return;

        try
        {
            var roleId = int.Parse(selectedRoleToAssign);
            var request = new AssignRoleRequest { RoleId = roleId };
            var response = await ApiService.AssignRoleToUserAsync(selectedUser.Id, request);

            if (response != null)
            {
                successMessage = $"Role assigned successfully to {selectedUser.FullName}.";
                await LoadUserRoles(selectedUser.Id);
                selectedRoleToAssign = string.Empty;
            }
            else
            {
                errorMessage = "Failed to assign role.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to assign role: {ex.Message}";
        }
    }

    private async Task RemoveUserRole(int userId, int roleId)
    {
        try
        {
            var response = await ApiService.RemoveRoleFromUserAsync(userId, roleId);

            if (response != null)
            {
                successMessage = "Role removed successfully.";
                await LoadUserRoles(userId);
            }
            else
            {
                errorMessage = "Failed to remove role.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to remove role: {ex.Message}";
        }
    }
}

